{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2020",
        "lib": [
            "es2020"
        ],
        "outDir": "out",
        "rootDir": "src",
        "sourceMap": true,
        "jsx": "react",
        "jsxFactory": "vscpp",
        "jsxFragmentFactory": "vscppf",
        "resolveJsonModule": true
    },
    "include": [
        "src",
        "test"
    ],
    "exclude": [
        "node_modules",
        ".vscode-test"
    ]
}