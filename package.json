{
	"name": "septic-config",
	"displayName": "Septic Language Basics",
	"icon": "images/SEPTIC_logo.jfif",
	"description": "Provides snippets, syntax highlighting and multi-level folding in Septic config files.",
	"author": "Einar S Idso",
	"license": "MIT",
	"version": "0.5.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/equinor/vscode-septic"
	},
	"publisher": "EinarSIdso",
	"categories": [],
	"keywords": [
		"multi-root ready"
	],
	"engines": {
		"vscode": "^1.75.0"
	},
	"activationEvents": [
		"onLanguage:septic"
	],
	"main": "./client/out/extension",
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "Septic",
			"properties": {
				"septic.trace.server": {
					"scope": "window",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "off",
					"description": "Traces the communication between VS Code and the language server."
				},
				"septic.diagnostics.missingVariable": {
					"scope": "window",
					"type": "string",
					"enum": [
						"error",
						"warning",
						"hint",
						"ignore"
					],
					"default": "error",
					"description": "Sets the severity level for objects with missing variables. Ignore implies no validation."
				},
				"septic.diagnostics.enabled": {
					"scope": "window",
					"type": "boolean",
					"default": "true",
					"description": "Controls the publishing of diagnostics reports"
				},
				"septic.hiearchy.defaultLevel": {
					"scope": "resource",
					"type": "integer",
					"description": "Default hiearchy level for septic objects that are not included in any level lists and not a variable. Value: 1-3",
					"default": 3
				},
				"septic.hiearchy.defaultVariableLevel": {
					"scope": "resource",
					"type": "integer",
					"description": "Deafualt hiearchy level for variable septic objects (*vr) that are not included in the level lists. Value: 1-3",
					"default": 2
				},
				"septic.hiearchy.level1": {
					"scope": "resource",
					"type": "array",
					"description": "List of septic objects belonging to level 1 in the hiearchy.",
					"uniqueItems": true,
					"default": [
						"system",
						"sopcproc",
						"dummyappl",
						"smpcappl",
						"displaygroup"
					]
				},
				"septic.hiearchy.level2": {
					"scope": "resource",
					"type": "array",
					"description": "List of septic objects belonging to level 2 in the hiearchy.",
					"uniqueItems": true,
					"default": [
						"exprmodl",
						"calcmodl",
						"table",
						"appl",
						"spacer",
						"heading",
						"mvrlist",
						"cvrlist",
						"dvrlist",
						"xvrplot",
						"image",
						"calctable",
						"modelmatrix"
					]
				},
				"septic.hiearchy.level3": {
					"scope": "resource",
					"type": "array",
					"description": "List of septic objects belonging to level 3 in the hiearchy.",
					"uniqueItems": true,
					"default": [
						"imagestatuslabel",
						"calcpvr"
					]
				}
			}
		},
		"languages": [
			{
				"id": "septic",
				"aliases": [
					"Septic"
				],
				"extensions": [
					".cnfg"
				],
				"configuration": "./language-configuration.json"
			},
			{
				"id": "jinja",
				"aliases": [
					"Jinja Raw",
					"jinja-raw"
				],
				"extensions": [],
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "septic",
				"scopeName": "source.septic",
				"path": "./syntaxes/septic.tmLanguage.json"
			},
			{
				"language": "jinja",
				"scopeName": "source.jinja",
				"path": "./syntaxes/jinja.tmLanguage.json"
			}
		],
		"snippets": [
			{
				"language": "septic",
				"path": "snippets/snippets.json"
			}
		],
		"configurationDefaults": {
			"[septic]": {
				"files.encoding": "windows1252",
				"editor.wordWrap": "on",
				"editor.insertSpaces": true
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"lint": "eslint ./client/src ./server/src --ext .ts,.tsx",
		"postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
		"integrationtest": "sh ./scripts/e2e.sh",
		"unittest": "jest"
	},
	"devDependencies": {
		"@types/jest": "^29.5.0",
		"@types/node": "^16.11.7",
		"@typescript-eslint/eslint-plugin": "^5.59.0",
		"@typescript-eslint/parser": "^5.59.0",
		"eslint": "^8.35.0",
		"jest": "^29.5.0",
		"ts-jest": "^29.0.5",
		"typescript": "^4.9.5"
	}
}
