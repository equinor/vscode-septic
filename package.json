{
	"name": "septic-config",
	"displayName": "Septic Language Basics",
	"icon": "images/SEPTIC_logo.jfif",
	"description": "Provides snippets, syntax highlighting and multi-level folding in Septic config files.",
	"author": "Einar S Idso",
	"license": "MIT",
	"version": "0.5.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/equinor/vscode-septic"
	},
	"publisher": "EinarSIdso",
	"categories": [],
	"keywords": [
		"multi-root ready"
	],
	"engines": {
		"vscode": "^1.75.0"
	},
	"activationEvents": [
		"onLanguage:plaintext",
		"onLanguage:septic"
	],
	"main": "./client/out/extension",
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "Example configuration",
			"properties": {
				"languageServerExample.maxNumberOfProblems": {
					"scope": "resource",
					"type": "number",
					"default": 100,
					"description": "Controls the maximum number of problems produced by the server."
				},
				"languageServerExample.trace.server": {
					"scope": "window",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "off",
					"description": "Traces the communication between VS Code and the language server."
				}
			}
		},
		"languages": [
			{
				"id": "septic",
				"aliases": [
					"Septic"
				],
				"extensions": [
					".cnfg"
				],
				"configuration": "./language-configuration.json"
			},
			{
				"id": "jinja",
				"aliases": [
					"Jinja Raw",
					"jinja-raw"
				],
				"extensions": [],
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "septic",
				"scopeName": "source.septic",
				"path": "./syntaxes/septic.tmLanguage.json"
			},
			{
				"language": "jinja",
				"scopeName": "source.jinja",
				"path": "./syntaxes/jinja.tmLanguage.json"
			}
		],
		"snippets": [
			{
				"language": "septic",
				"path": "snippets/snippets.json"
			}
		],
		"configurationDefaults": {
			"[septic]": {
				"files.encoding": "windows1252",
				"editor.wordWrap": "on",
				"editor.insertSpaces": true
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"lint": "eslint ./client/src ./server/src --ext .ts,.tsx",
		"postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
		"integrationtest": "sh ./scripts/e2e.sh",
		"unittest": "jest"
	},
	"devDependencies": {
		"@types/jest": "^29.5.0",
		"@types/node": "^16.11.7",
		"@typescript-eslint/eslint-plugin": "^5.59.0",
		"@typescript-eslint/parser": "^5.59.0",
		"eslint": "^8.35.0",
		"jest": "^29.5.0",
		"ts-jest": "^29.0.5",
		"typescript": "^4.9.5"
	}
}
