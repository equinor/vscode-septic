// A launch configuration that launches the extension inside a new window
// Use IntelliSense to learn about possible attributes.
// Hover to view descriptions of existing attributes.
// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Attach to server",
            "port": 6009,
            "request": "attach",
            "skipFiles": ["<node_internals>/**"],
            "type": "node"
        },
        {
            "name": "Extension",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "args": ["--extensionDevelopmentPath=${workspaceFolder}"],
            "outFiles": ["${workspaceRoot}/client/out/**/*.js"],
            "preLaunchTask": "npm: compile"
        },
        {
            "name": "Language Server E2E Test",
            "type": "extensionHost",
            "request": "launch",
            "args": [
                "--disable-extensions",
                "--extensionDevelopmentPath=${workspaceFolder}",
                "--extensionTestsPath=${workspaceFolder}/client/out/test/index",
                "${workspaceRoot}/client/src/test/fixtures"
            ],
            "outFiles": ["${workspaceFolder}/client/out/test/**/*.js"],
            "preLaunchTask": "npm: watch"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${workspaceFolder}/server/src/language-service/fileInfoProvider.ts",
            "preLaunchTask": "npm: watch",
            "outFiles": ["${workspaceFolder}/server/out/**/*.js"]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Jest Tests",
            "program": "${workspaceRoot}/node_modules/jest/bin/jest.js",
            "args": ["-i"],
            "preLaunchTask": "npm: compile",
            "internalConsoleOptions": "openOnSessionStart",
            "outFiles": ["${workspaceRoot}/server/out/**/*"]
        }
    ]
}
