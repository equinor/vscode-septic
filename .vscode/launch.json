// A launch configuration that launches the extension inside a new window
// Use IntelliSense to learn about possible attributes.
// Hover to view descriptions of existing attributes.
// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Update Documentation",
            "type": "python",
            "request": "launch",
            "program": "${workspaceRoot}/scripts/main.py",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Attach to server",
            "port": 6009,
            "request": "attach",
            "skipFiles": ["<node_internals>/**"],
            "type": "node"
        },
        {
            "name": "Extension",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}/packages/extension"
            ],
            "outFiles": ["${workspaceRoot}/packages/extension/dist/**"],
            "preLaunchTask": "npm: watch"
        },
        {
            "name": "Language Server E2E Test",
            "type": "extensionHost",
            "request": "launch",
            "args": [
                "--disable-extensions",
                "--extensionDevelopmentPath=${workspaceFolder}/packages/extension",
                "--extensionTestsPath=${workspaceFolder}/packages/extension/client/out/test/index",
                "${workspaceRoot}/packages/extension/client/src/test/fixtures"
            ],
            "outFiles": [
                "${workspaceFolder}/packages/extension/client/out/test/**/*.js"
            ],
            "preLaunchTask": "npm: compile-tests - packages/extension"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Unittest Extension",
            "env": {
                "NODE_ENV": "test",
                "TS_NODE_PROJECT": "${workspaceFolder}/packages/extension/server/tsconfig.json"
            },
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "args": [
                "-r",
                "ts-node/register",
                "--timeout",
                "999999",
                "--colors",
                "${workspaceFolder}/packages/extension/server/src/test/**/*.test.ts"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        }
    ]
}
