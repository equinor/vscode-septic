// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "npm",
            "script": "compile",
            "group": "build",
            "presentation": {
                "panel": "dedicated",
                "reveal": "never"
            },
            "problemMatcher": ["$tsc"]
        },
        {
            "type": "npm",
            "script": "watch",
            "problemMatcher": "$tsc-watch",
            "path": "packages/extension",
            "isBackground": true,
            "presentation": {
                "reveal": "never",
                "panel": "dedicated"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "npm",
            "script": "lint",
            "problemMatcher": ["$eslint-stylish"],
            "label": "npm: lint",
            "detail": "eslint -c eslint.config.mjs ./client/src ./server/src"
        },
        {
            "type": "npm",
            "script": "compile-tests",
            "path": "packages/extension",
            "group": "build",
            "problemMatcher": [],
            "label": "npm: compile-tests - packages/extension",
            "detail": "tsc -p ./client && tsc -p ./server && pnpm copy-files"
        }
    ]
}
