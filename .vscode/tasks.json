// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "command": "pnpm",
            "args": ["run", "watch"],
            "options": {
                "cwd": "${workspaceFolder}/packages/extension"
            },
            "problemMatcher": "$tsc-watch",
            "isBackground": true,
            "presentation": {
                "reveal": "never",
                "panel": "dedicated"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "label": "pnpm: watch"
        },
        {
            "type": "shell",
            "command": "pnpm",
            "args": ["run", "build:test"],
            "options": {
                "cwd": "${workspaceFolder}/packages/extension"
            },
            "group": "build",
            "problemMatcher": [],
            "label": "build-extension-integration-tests"
        }
    ]
}
