{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2024",
        "lib": ["es2024"],
        "outDir": "out",
        "rootDir": "src",
        "sourceMap": true,
        "jsx": "react",
        "jsxFactory": "vscpp",
        "jsxFragmentFactory": "vscppf",
        "resolveJsonModule": true,
        "skipLibCheck": true
    },
    "include": ["src", "test"],
    "exclude": ["node_modules", ".vscode-test"]
}
