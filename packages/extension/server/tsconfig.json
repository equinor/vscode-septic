{
    "compilerOptions": {
        "target": "es2024",
        "lib": ["es2024"],
        "module": "nodenext",
        "moduleResolution": "nodenext",
        "sourceMap": true,
        "strict": true,
        "outDir": "out",
        "rootDir": "src",
        "skipLibCheck": true,
        "composite": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "out", "**/*.test.ts", ".vscode-test"]
}
