{
    "if_block": {
        "prefix": "if",
        "body": [
            "{% if condition %}",
            "\t$0",
            "{% endif %}"
        ],
        "description": "Insert a Jinja if block"
    },
    "if_else_block": {
        "prefix": "ifelse",
        "body": [
            "{% if condition1 %}",
            "\t$1",
            "{% elseif condition2 %}",
            "\t$2",
            "{% else %}",
            "\t$3",
            "{% endif %}"
        ],
        "description": "Insert a Jinja if-else block"
    },
    "for_loop": {
        "prefix": "for",
        "body": [
            "{% for item in items %}",
            "\t$1",
            "{% endfor %}"
        ],
        "description": "Iterate over a list using a Jinja for loop"
    },
	"set_variable": {
        "prefix": "set",
        "body": [
            "{%- set $1 = $2 -%}"
        ],
        "description": "Set a variable in Jinja"
    },
    "include_template": {
        "prefix": "include",
        "body": [
            "{%- include \"$1\" -%}"
        ],
        "description": "Include a template in Jinja"
    }
}